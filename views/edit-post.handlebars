<div class="card">
  <h2 class="title pb-4 post-title">Edit Post</h2>
  <form class="card-body edit-post-form">
    <div class="form-row">
      <label
        for="post-title"
        class="form-label"
        style="font-size: 1.75rem;"
      >Title</label>
      <input
        name="post-title"
        type="text"
        value="{{post.title}}"
        class="form-input form-control"
      />
    </div>

    <div class="form-row">
      <label
        class="form-label"
        for="content"
        style="font-size: 1.75rem;"
      >Content</label>
      <input
        name="content"
        type="text"
        value="{{post.content}}"
        class="form-input form-control"
      />
    </div>
    <button
      type="submit"
      class="btn"
      style="background: var(--blue-gray); color: var(--light-gray);"
    >Update Post</button>
    <button
      type="button"
      class="delete-post-btn btn"
      style="background: var(--blue-gray); color: var(--light-gray);"
    >Delete Post</button>
  </form>
</div>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>